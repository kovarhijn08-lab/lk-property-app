rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Функция проверки авторизации
    function isAuthenticated() {
      return request.auth != null;
    }

    // Функция проверки владения документом
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Функция проверки глобального администратора (по email и UID)
    function isWhitelistedAdmin() {
      return isAuthenticated() && 
        (request.auth.token.email == 'admin@example.com' || 
         request.auth.token.email == 'admintest@admin.ru' || 
         request.auth.token.email == 'final_test_8812@example.com' ||
         request.auth.uid == 'gXLLyfbt5aMPIcjdJIB6xUoLYht2' ||
         request.auth.uid == 'qXLLyfbt5aMPIcjdJIB6xUoLYht2');
    }

    match /deploy_check/canary {
      allow read: if true;
    }

    // Безопасное получение роли
    function hasRole(role) {
      let userPath = /databases/$(database)/documents/users/$(request.auth.uid);
      return isAuthenticated() && exists(userPath) && get(userPath).data.role == role;
    }

    function isAdmin() {
      return isWhitelistedAdmin() || hasRole('admin');
    }

    function isPMC() {
      return isWhitelistedAdmin() || hasRole('pmc');
    }

    function isOwnerRole() {
      return isWhitelistedAdmin() || hasRole('owner');
    }

    function isTenantRole() {
      return hasRole('tenant');
    }

    function isSelf(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isSafeUserUpdate() {
      return request.resource.data.role == resource.data.role
        && request.resource.data.email == resource.data.email
        && request.resource.data.lastLogin == resource.data.lastLogin
        && request.resource.data.preferences.isDemoMode == resource.data.preferences.isDemoMode;
    }

    // Правила для коллекции объектов (properties)
    match /properties/{propertyId} {
      // PMC имеет полный доступ
      allow read, write: if isPMC();
      
      // Владелец или создатель видит свои объекты (userId в базе - это владелец/создатель)
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid);
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Арендатор видит объект, если он в нем прописан (через UID в tenantIds)
      allow read: if isAuthenticated() && isTenantRole() && request.auth.uid in resource.data.tenantIds;

      // Разрешаем создание
      allow create: if isAuthenticated() && (request.resource.data.userId == request.auth.uid || isPMC());
    }

    // Правила для коллекции пользователей
    match /users/{userId} {
      allow read: if isAdmin() || isPMC() || isSelf(userId);
      allow create: if isSelf(userId)
        && (
          // Владельцы и PMC создаются свободно
          request.resource.data.role in ['owner', 'pmc'] || 
          // Жильцы ОБЯЗАТЕЛЬНО должны предоставить inviteId, привязанный к их UID
          (
            request.resource.data.role == 'tenant' &&
            request.resource.data.inviteId != null &&
            get(/databases/$(database)/documents/invitations/$(request.resource.data.inviteId)).data.status == 'used' &&
            get(/databases/$(database)/documents/invitations/$(request.resource.data.inviteId)).data.usedBy == userId
          )
        )
        && request.resource.data.role != 'admin'
        && request.resource.data.email == request.auth.token.email;
      allow update: if isAdmin() || isPMC() || (isSelf(userId) && isSafeUserUpdate());
      allow delete: if isAdmin() || isPMC();
    }
    
    // Правила для коллекции вендоров
    match /vendors/{vendorId} {
       allow read, write: if isPMC();
       allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
       allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Правила для коллекции сообщений (чата)
    match /messages/{messageId} {
      allow read, write: if isPMC();
      // Разрешаем участникам чата (manager vs tenant)
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        // Либо если это чат по объекту, к которому у пользователя есть доступ
        (isTenantRole() && exists(/databases/$(database)/documents/properties/$(resource.data.propertyId)) &&
         request.auth.uid in get(/databases/$(database)/documents/properties/$(resource.data.propertyId)).data.tenantIds)
      );
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // Правила для коллекции заявок на обслуживание
    match /maintenance_requests/{requestId} {
      allow read, write: if isPMC();
      allow read, write: if isAuthenticated() && (
        resource == null || 
        isOwner(resource.data.userId) || 
        isOwner(request.resource.data.userId) ||
        (isTenantRole() && resource.data.userId == request.auth.uid)
      );
    }

    // Правила для индикатора "печатает"
    match /typing/{typingId} {
      allow read, write: if isAuthenticated();
    }

    // Правила для коллекции приглашений (invitations)
    match /invitations/{inviteId} {
      // PMC и владельцы могут создавать и удалять
      allow create, delete: if isPMC() || isOwnerRole();
      
      // Доступ только по точному ID (хешу токена). Листинг (list) полностью запрещен для всех.
      allow get: if isAuthenticated(); 
      
      // Обновление доступно только при регистрации (использование инвайта) или откате
      allow update: if isPMC() || isOwnerRole() || (
        isAuthenticated() && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'usedAt', 'usedBy', 'updatedAt']) &&
        (
          // Сценарий 1: Использование инвайта
          (request.resource.data.status == 'used' && request.resource.data.usedBy == request.auth.uid) ||
          // Сценарий 2: Откат инвайта (возврат в active)
          (request.resource.data.status == 'active' && resource.data.usedBy == request.auth.uid)
        )
      );
    }

    // Правила для системных логов (Skynet Hub)
    match /system_logs/{logId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if isPMC();
    }


    // По умолчанию запрещено всё остальное
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
